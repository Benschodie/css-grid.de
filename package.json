{
  "name": "css-grid.de",
  "version": "1.0.0",
  "description": "css grid landing page",
  "main": "index.js",
  "watch": {
    "handlebars": {
      "patterns": [
        "src"
      ],
      "extensions": "hbs",
      "quiet": false
    },
    "sass": {
      "patterns": [
        "src"
      ],
      "extensions": "scss",
      "quiet": false
    }
  },
  "scripts": {
    "start": "start-server-and-test server http://localhost:8080 watch",
    "build": "npm run handlebars && npm run sass",
    "server": "live-server dist",
    "handlebars": "hbs src/pages/index.hbs -P 'src/**/*.hbs' -o dist",
    "sass": "node-sass src -o dist --output-style compressed",
    "watch": "npm-watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Benschodie/css-grid.de.git"
  },
  "keywords": [
    "cssgrid",
    "css-grid",
    "grid",
    "css",
    "flexbox",
    "styling",
    "layout"
  ],
  "author": "Benjamin Konopka",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Benschodie/css-grid.de/issues"
  },
  "homepage": "https://github.com/Benschodie/css-grid.de#readme",
  "dependencies": {},
  "devDependencies": {
    "handlebars": "^4.1.2",
    "hbs-cli": "^1.3.0",
    "live-server": "^1.2.1",
    "node-sass": "^4.12.0",
    "npm-watch": "^0.6.0",
    "start-server-and-test": "^1.9.1"
  }
}
